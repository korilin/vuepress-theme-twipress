
.change-enter-active {
    transition all 0.3s ease
}

.change-leave-active {
    transition all 0.3s ease
}

.change-enter {
    transform translate(-20px)
    opacity 0
}

.change-leave-to {
    transform translateY(20px)
    opacity 0
}

.show-enter-active {
    transition all 0.3s ease
}

.show-leave-active {
    transition all 0.3s ease
}

.show-enter {
    transform translate(-20px)
    opacity 0
}

.show-leave-to {
    transform translateX(20px)
    opacity 0
}